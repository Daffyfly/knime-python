		<available property="scriptednode.jar" file="${build.result.folder}/scriptednode.jar"/>
		<antcall target="scriptednode.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="scriptednodesrc.zip" file="${build.result.folder}/scriptednodesrc.zip"/>
		<antcall target="scriptednodesrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.knime.ext.jython_1.0.0"/>
		<copy todir="${destination.temp.folder}/org.knime.ext.jython_1.0.0" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="scriptednode.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/org.knime.ext.jython_1.0.0" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,plugin.properties,META-INF/,scriptednode.jar,icons/,lib/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
