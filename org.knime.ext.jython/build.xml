	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.knime.ext.jython_1.0.0"/>
		<copy file="${build.result.folder}/scriptednodesrc.zip" todir="${destination.temp.folder}/org.knime.ext.jython_1.0.0" failonerror="false" overwrite="false"/>
		<copy todir="${destination.temp.folder}/org.knime.ext.jython_1.0.0" failonerror="false" overwrite="false">
			<fileset dir="${basedir}" includes="src/,plugin.xml,plugin.properties,icons/,META-INF/,lib/"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.knime.ext.jython_1.0.0"/>
		<copy file="${temp.folder}/scriptednode.jar.bin${logExtension}" todir="${destination.temp.folder}/org.knime.ext.jython_1.0.0" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.knime.ext.jython of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/scriptednode.jar"/>
		<delete file="${build.result.folder}/scriptednodesrc.zip"/>
		<delete file="${plugin.destination}/org.knime.ext.jython_1.0.0.jar"/>
		<delete file="${plugin.destination}/org.knime.ext.jython_1.0.0.zip"/>
		<delete dir="${temp.folder}"/>
